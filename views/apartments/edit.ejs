    <% layout('layouts/boilerplate') %> 

    <div class="row">
        <h1 class="text-center">Edit Apartment</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/apartments/<%= apartment._id %>?_method=PUT" method="POST" novalidate class="validation-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="apartment[title]" 
                        value="<%= apartment.title %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" id="location" name="apartment[location]" 
                        value="<%= apartment.location %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="rent" class="form-label">Monthly rent</label>
                    <div class="input-group">
                        <span class="input-group-text" id="rent-label">$</span>
                        <input type="number" class="form-control" placeholder="0.00" aria-label="rent"
                            aria-describedby="rent-label" name="apartment[rent]" value="<%= apartment.rent %>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" name="apartment[description]" required><%= apartment.description %></textarea>
                    <div class="valid-feedback">
                    Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Add more images</label>
                    <input class="form-control" type="file" name="image" id="image" multiple>
                </div>

                <div class="mb-3">
                    <% apartment.images.forEach((img, i) => { %>
                        <img src="<%= img.thumbnail %>" alt="" class="img-thumbnail">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                            <label class="form-check-label" for="image-<%= i %>">Delete? </label>
                        </div>
                    <% }) %>
                </div>


                <div class="mb-3">
                    <button class="btn btn-success">Update Apartment</button>
                </div>
            </form>
            <a href="/apartments/<%= apartment._id %>">Back to apartment</a>
        </div>
    </div>